<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ffrab.mobile.common.ui.MainPage">

  <StackLayout Orientation="Vertical">
    <Label Text="{Binding Path=ConferenceTitle}" VerticalOptions="Start" HorizontalOptions="Center" />

    <ListView ItemsSource="{Binding Path=NextFavoriteEvents}">
       <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <Label Text="{Binding Path=Title}" />
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
</ContentView>